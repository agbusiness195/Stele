{
  "name": "@grith/evm",
  "version": "2.0.0",
  "description": "EVM anchoring utilities with ABI encoding, Keccak-256 hashing, and JSON-RPC provider interface",
  "sideEffects": false,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm && tsc --emitDeclarationOnly --declaration --outDir dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --config ../../vitest.config.ts",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@grith/types": "2.0.0",
    "@grith/crypto": "2.0.0",
    "@grith/core": "2.0.0",
    "@noble/hashes": "^1.4.0"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/agbusiness195/Grith.git",
    "directory": "packages/evm"
  },
  "homepage": "https://grith.dev",
  "bugs": {
    "url": "https://github.com/agbusiness195/grith/issues"
  },
  "author": "Grith Labs, Inc.",
  "keywords": [
    "grith",
    "covenant",
    "ai-accountability",
    "evm",
    "ethereum",
    "solidity",
    "blockchain"
  ],
  "module": "./dist/index.mjs"
}
