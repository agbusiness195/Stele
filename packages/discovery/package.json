{
  "name": "@usekova/discovery",
  "version": "2.0.0",
  "description": "Cross-platform discovery protocol for .well-known/kova/ endpoints",
  "sideEffects": false,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm && tsc --emitDeclarationOnly --declaration --outDir dist",
    "bundle": "tsup src/index.ts --format cjs,esm",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run --config ../../vitest.config.ts",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@usekova/core": "2.0.0",
    "@usekova/crypto": "2.0.0",
    "@usekova/types": "2.0.0"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/agbusiness195/kova.git",
    "directory": "packages/discovery"
  },
  "homepage": "https://usekova.dev",
  "bugs": {
    "url": "https://github.com/agbusiness195/kova/issues"
  },
  "author": "Kova Labs, Inc.",
  "keywords": [
    "kova",
    "discovery",
    "well-known",
    "cross-platform",
    "ai-accountability"
  ]
}
