{
  "name": "@stele/discovery",
  "version": "0.1.0",
  "description": "Cross-platform discovery protocol for .well-known/stele/ endpoints",
  "sideEffects": false,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.mjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "bundle": "tsup src/index.ts --format cjs,esm",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "prepublishOnly": "npm run build"
  },
  "files": ["dist", "README.md", "LICENSE"],
  "dependencies": {
    "@stele/core": "0.1.0",
    "@stele/crypto": "0.1.0",
    "@stele/types": "0.1.0"
  },
  "license": "MIT",
  "engines": { "node": ">=18" },
  "publishConfig": { "access": "public" },
  "repository": {
    "type": "git",
    "url": "https://github.com/agbusiness195/Stele.git",
    "directory": "packages/discovery"
  },
  "homepage": "https://stele.dev",
  "bugs": {
    "url": "https://github.com/agbusiness195/stele/issues"
  },
  "author": "Stele Labs, Inc.",
  "keywords": ["stele", "discovery", "well-known", "cross-platform", "ai-accountability"]
}
