{
  "name": "@usekova/verifier",
  "version": "2.0.0",
  "description": "Standalone verification engine for third-party auditors",
  "sideEffects": false,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm && tsc --emitDeclarationOnly --declaration --outDir dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --config ../../vitest.config.ts",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@usekova/types": "2.0.0",
    "@usekova/crypto": "2.0.0",
    "@usekova/ccl": "2.0.0",
    "@usekova/core": "2.0.0"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/agbusiness195/kova.git",
    "directory": "packages/verifier"
  },
  "homepage": "https://usekova.dev",
  "bugs": {
    "url": "https://github.com/agbusiness195/kova/issues"
  },
  "author": "Kova Labs, Inc.",
  "keywords": [
    "kova",
    "covenant",
    "ai-accountability",
    "verifier",
    "signature-verification",
    "integrity",
    "cryptographic"
  ],
  "module": "./dist/index.mjs"
}
