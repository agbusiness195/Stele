{
  "name": "@usekova/cli",
  "version": "2.0.0",
  "description": "Command-line interface for the Stele covenant framework",
  "sideEffects": false,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "default": "./dist/index.js"
    }
  },
  "bin": {
    "stele": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm && tsc --emitDeclarationOnly --declaration --outDir dist",
    "bundle": "tsup src/index.ts --format cjs",
    "dev": "tsup src/index.ts --format cjs --dts --watch",
    "test": "vitest run --config ../../vitest.config.ts",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@usekova/crypto": "2.0.0",
    "@usekova/ccl": "2.0.0",
    "@usekova/core": "2.0.0",
    "@usekova/identity": "2.0.0",
    "@usekova/enforcement": "2.0.0",
    "@usekova/proof": "2.0.0",
    "@usekova/reputation": "2.0.0",
    "@usekova/breach": "2.0.0",
    "@usekova/mcp": "2.0.0"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/agbusiness195/Stele.git",
    "directory": "packages/cli"
  },
  "homepage": "https://stele.dev",
  "bugs": {
    "url": "https://github.com/agbusiness195/stele/issues"
  },
  "author": "Stele Labs, Inc.",
  "keywords": [
    "stele",
    "covenant",
    "ai-accountability",
    "cli",
    "command-line",
    "audit",
    "developer-tools"
  ],
  "module": "./dist/index.mjs"
}
