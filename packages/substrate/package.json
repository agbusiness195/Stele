{
  "name": "@grith/substrate",
  "version": "2.0.0",
  "description": "Cross-chain substrate layer for multi-network covenant anchoring",
  "sideEffects": false,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm && tsc --emitDeclarationOnly --declaration --outDir dist",
    "bundle": "tsup src/index.ts --format cjs,esm",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "prepublishOnly": "npm run build",
    "test": "vitest run --config ../../vitest.config.ts",
    "typecheck": "tsc --noEmit"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@grith/crypto": "2.0.0"
  },
  "license": "MIT",
  "author": "Grith Labs, Inc.",
  "homepage": "https://grith.dev",
  "bugs": {
    "url": "https://github.com/agbusiness195/grith/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/agbusiness195/grith.git",
    "directory": "packages/substrate"
  },
  "keywords": [
    "grith",
    "covenant",
    "ai-accountability",
    "substrate",
    "hardware",
    "physical-constraints",
    "cross-platform"
  ]
}
