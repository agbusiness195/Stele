{
  "name": "@grith/sdk",
  "version": "2.0.0",
  "description": "TypeScript SDK for embedding Grith into agent frameworks and applications",
  "sideEffects": false,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm && tsc --emitDeclarationOnly --declaration --outDir dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --config ../../vitest.config.ts",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@grith/types": "2.0.0",
    "@grith/crypto": "2.0.0",
    "@grith/core": "2.0.0",
    "@grith/ccl": "2.0.0",
    "@grith/identity": "2.0.0",
    "@grith/store": "2.0.0",
    "@grith/verifier": "2.0.0",
    "@grith/negotiation": "2.0.0",
    "@grith/breach": "2.0.0",
    "@grith/reputation": "2.0.0",
    "@grith/proof": "2.0.0",
    "@grith/attestation": "2.0.0",
    "@grith/discovery": "2.0.0",
    "@grith/schema": "2.0.0",
    "@grith/temporal": "2.0.0",
    "@grith/canary": "2.0.0",
    "@grith/gametheory": "2.0.0",
    "@grith/composition": "2.0.0",
    "@grith/antifragile": "2.0.0",
    "@grith/consensus": "2.0.0",
    "@grith/robustness": "2.0.0",
    "@grith/recursive": "2.0.0",
    "@grith/alignment": "2.0.0",
    "@grith/norms": "2.0.0",
    "@grith/substrate": "2.0.0",
    "@grith/derivatives": "2.0.0",
    "@grith/legal": "2.0.0",
    "@grith/enforcement": "2.0.0"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/agbusiness195/Grith.git",
    "directory": "packages/sdk"
  },
  "homepage": "https://grith.dev",
  "bugs": {
    "url": "https://github.com/agbusiness195/grith/issues"
  },
  "author": "Grith Labs, Inc.",
  "keywords": [
    "grith",
    "covenant",
    "ai-accountability",
    "sdk",
    "ai-agents",
    "trust",
    "governance"
  ],
  "module": "./dist/index.mjs"
}
