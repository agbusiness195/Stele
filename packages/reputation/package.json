{
  "name": "@stele/reputation",
  "version": "0.1.0",
  "description": "Reputation scoring and trust management for the Stele covenant framework",
  "type": "module",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": ["dist", "README.md", "LICENSE"],
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/agbusiness195/Stele.git",
    "directory": "packages/reputation"
  },
  "keywords": ["stele", "covenant", "ai-accountability", "reputation", "trust", "scoring"],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "bundle": "tsup src/index.ts --format cjs,esm",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@stele/crypto": "0.1.0",
    "@stele/core": "0.1.0",
    "@stele/identity": "0.1.0"
  }
}
