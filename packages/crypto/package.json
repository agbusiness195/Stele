{
  "name": "@stele/crypto",
  "version": "0.1.0",
  "description": "Cryptographic primitives for the Stele covenant framework",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/agbusiness195/Stele.git",
    "directory": "packages/crypto"
  },
  "keywords": [
    "stele",
    "covenant",
    "ai-accountability",
    "cryptography",
    "ed25519",
    "signing",
    "hashing"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "bundle": "tsup src/index.ts --format cjs,esm",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@noble/ed25519": "^2.1.0",
    "@noble/hashes": "^1.4.0"
  }
}
