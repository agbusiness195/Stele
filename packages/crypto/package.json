{
  "name": "@nobulex/crypto",
  "version": "2.0.0",
  "description": "Cryptographic primitives for the Nobulex covenant framework",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/agbusiness195/nobulex.git",
    "directory": "packages/crypto"
  },
  "homepage": "https://nobulex.dev",
  "bugs": {
    "url": "https://github.com/agbusiness195/nobulex/issues"
  },
  "author": "Nobulex Labs, Inc.",
  "keywords": [
    "nobulex",
    "covenant",
    "ai-accountability",
    "cryptography",
    "ed25519",
    "signing",
    "hashing"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm && tsc --emitDeclarationOnly --declaration --outDir dist",
    "bundle": "tsup src/index.ts --format cjs,esm",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run --config ../../vitest.config.ts",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@noble/ed25519": "^2.1.0",
    "@noble/hashes": "^1.4.0",
    "@nobulex/types": "2.0.0"
  }
}
