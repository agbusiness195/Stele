{
  "name": "@usekova/mcp-server",
  "version": "2.0.0",
  "description": "Model Context Protocol server with stdio transport that exposes Kova covenant tools to AI agents",
  "sideEffects": false,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "default": "./dist/index.js"
    }
  },
  "bin": {
    "kova-mcp": "dist/bin.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm && tsc --emitDeclarationOnly --declaration --outDir dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --config ../../vitest.config.ts",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@usekova/types": "2.0.0",
    "@usekova/crypto": "2.0.0",
    "@usekova/core": "2.0.0",
    "@usekova/store": "2.0.0",
    "@usekova/verifier": "2.0.0",
    "@usekova/sdk": "2.0.0"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/agbusiness195/Stele.git",
    "directory": "packages/mcp-server"
  },
  "homepage": "https://usekova.dev",
  "bugs": {
    "url": "https://github.com/agbusiness195/stele/issues"
  },
  "author": "Kova Labs, Inc.",
  "keywords": [
    "kova",
    "covenant",
    "ai-accountability",
    "mcp",
    "model-context-protocol"
  ],
  "module": "./dist/index.mjs"
}
