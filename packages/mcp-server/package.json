{
  "name": "@grith/mcp-server",
  "version": "2.0.0",
  "description": "Model Context Protocol server with stdio transport that exposes Grith covenant tools to AI agents",
  "sideEffects": false,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "default": "./dist/index.js"
    }
  },
  "bin": {
    "grith-mcp": "dist/bin.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup && tsc --emitDeclarationOnly --declaration --outDir dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --config ../../vitest.config.ts",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@grith/types": "2.0.0",
    "@grith/crypto": "2.0.0",
    "@grith/core": "2.0.0",
    "@grith/store": "2.0.0",
    "@grith/verifier": "2.0.0",
    "@grith/sdk": "2.0.0"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/agbusiness195/grith.git",
    "directory": "packages/mcp-server"
  },
  "homepage": "https://grith.dev",
  "bugs": {
    "url": "https://github.com/agbusiness195/grith/issues"
  },
  "author": "Grith Labs, Inc.",
  "keywords": [
    "grith",
    "covenant",
    "ai-accountability",
    "mcp",
    "model-context-protocol"
  ],
  "module": "./dist/index.mjs"
}
