{
  "name": "@nobulex/composition",
  "version": "2.0.0",
  "description": "Covenant composition with merge, intersect, and chain operations",
  "sideEffects": false,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm && tsc --emitDeclarationOnly --declaration --outDir dist",
    "bundle": "tsup src/index.ts --format cjs,esm",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run --config ../../vitest.config.ts",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@nobulex/crypto": "2.0.0",
    "@nobulex/ccl": "2.0.0"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/agbusiness195/nobulex.git",
    "directory": "packages/composition"
  },
  "homepage": "https://nobulex.dev",
  "bugs": {
    "url": "https://github.com/agbusiness195/nobulex/issues"
  },
  "author": "Nobulex Labs, Inc.",
  "keywords": [
    "nobulex",
    "covenant",
    "ai-accountability",
    "composition",
    "trust-algebra",
    "multi-agent",
    "safety-envelope"
  ]
}
