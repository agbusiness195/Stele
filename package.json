{
  "name": "grith",
  "private": true,
  "version": "2.0.0",
  "description": "The accountability primitive for AI agents",
  "workspaces": [
    "packages/types",
    "packages/crypto",
    "packages/ccl",
    "packages/core",
    "packages/store",
    "packages/verifier",
    "packages/identity",
    "packages/enforcement",
    "packages/proof",
    "packages/reputation",
    "packages/breach",
    "packages/sdk",
    "packages/mcp",
    "packages/cli",
    "packages/mcp-server",
    "packages/react",
    "packages/evm",
    "packages/attestation",
    "packages/canary",
    "packages/gametheory",
    "packages/composition",
    "packages/antifragile",
    "packages/negotiation",
    "packages/consensus",
    "packages/robustness",
    "packages/temporal",
    "packages/recursive",
    "packages/alignment",
    "packages/norms",
    "packages/substrate",
    "packages/derivatives",
    "packages/legal",
    "packages/discovery",
    "packages/schema"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "typecheck": "npm run typecheck --workspaces",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:vectors": "vitest run --config vitest.vectors.config.ts",
    "lint": "npx tsc --build --noEmit",
    "docs": "npx typedoc",
    "docs:build": "typedoc",
    "prepublish:check": "npm pack --dry-run -ws",
    "publish:all": "npm run build && npm publish --workspaces"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/agbusiness195/grith"
  },
  "homepage": "https://grith.dev",
  "bugs": {
    "url": "https://github.com/agbusiness195/grith/issues"
  },
  "author": "Grith Labs, Inc.",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^25.2.3",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
