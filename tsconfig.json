{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "references": [
    { "path": "packages/crypto" },
    { "path": "packages/ccl" },
    { "path": "packages/core" },
    { "path": "packages/identity" },
    { "path": "packages/enforcement" },
    { "path": "packages/proof" },
    { "path": "packages/reputation" },
    { "path": "packages/breach" },
    { "path": "packages/mcp" },
    { "path": "packages/cli" }
  ]
}

